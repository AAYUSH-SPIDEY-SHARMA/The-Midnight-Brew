# Environment Configuration for The Midnight Brew
# Copy this file to .env and update the values

# Server Configuration
PORT=3000
NODE_ENV=development

# MongoDB Configuration (Update with your MongoDB URI)
MONGODB_URI=mongodb://localhost:27017/midnight-brew

# JWT Configuration (Change this to a secure random string in production)
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRES_IN=24h

# Session Configuration
SESSION_TIMEOUT=24
SESSION_TIMEOUT_HOURS=24

# Security Configuration
BCRYPT_SALT_ROUNDS=10

# Cookie Configuration
COOKIE_MAX_AGE_HOURS=24